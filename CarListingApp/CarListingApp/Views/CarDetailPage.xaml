<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarListingApp.Views.CarDetailPage"
             xmlns:model="clr-namespace:CarListingApp.Models"
             xmlns:viewmodel="clr-namespace:CarListingApp.ViewModels"
             x:DataType="viewmodel:CarDetailPageViewModel" Title="{Binding Car.Make}">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Car.Vin}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontSize="30" />
    </VerticalStackLayout>
</ContentPage>
